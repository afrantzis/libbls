Import('env')

env.Clone()

tests = " ".join(ARGUMENTS.get('tests', '').split(','))

env['ENV']['LD_LIBRARY_PATH'] = 'build/src'
env['ENV']['PYTHONPATH'] = 'build/bindings:test'

test_nodes = []
test_nodes.append(env.Command(None, 'run_tests.py', "python $SOURCE %s" % tests));

Return('test_nodes')
